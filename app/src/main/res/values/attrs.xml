<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IndexBar">
        <attr name="indexTextSize" format="dimension" />
        <attr name="indexTextColor" format="color" />
        <attr name="downTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="LoginButton">
        <attr name="text" format="string" />
        <attr name="loadingText" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="barColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CodeInputView">
        <!--验证码数量-->
        <attr name="itemCount" format="integer" />
        <!--验证码宽度-->
        <attr name="itemWidth" format="dimension" />
        <!--验证码背景-->
        <attr name="itemBackground" format="reference" />
        <!--验证码间距-->
        <attr name="gapWidth" format="dimension" />
        <!--验证码字体大小-->
        <attr name="ciTextSize" format="dimension" />
        <!--验证码字体颜色-->
        <attr name="ciTextColor" format="color|reference" />

        <!--键盘类型-->
        <attr name="ciInputType">
            <enum name="number" value="0" />
            <enum name="text" value="1" />
            <enum name="textCapCharacters" value="2" />
            <enum name="password" value="3" />
            <enum name="numberPassword" value="4" />
        </attr>
    </declare-styleable>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>
</resources>